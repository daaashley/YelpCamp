<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
        <div class="thumbnail">
            <img class="img-responsive" src="<%= campground.image %>">
            <div class="caption-full">
                <div class=caption-full>
                <h4><a href='/'><%=campground.name%></a><p class="pull-right">$9.00/night</p></h4>
                
                </div>
                <p class="desc"><%= campground.description %></p>
            </div>
        </div>
        <div class="well">
            
            <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author %></strong>
                        <span class="pull-right">10 Days Ago</span>
                        <p>
                            <%= comment.text %></p>
                        </p>
                    </div>
                </div>
                <hr></hr>
                
            <% }); %>
            <div class="text-right">
                <form action="/campgrounds/<%=campground._id%>/comments/new" method="GET">
                    <button class="btn btn-large btn-success" type="Submit">Add Comment</button>
                </form>
            </div>
        </div>
            
        </div>
    </div>
</div>





<% include ../partials/footer %>